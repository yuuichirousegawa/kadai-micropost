<% unless current_user == user %>
  <% if current_user.favorite?(user) %>
    <%= form_for(current_user.favorites.find_by(miropost_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :miropost_id, user.id %>
      <%= f.submit 'お気に入りを外す', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :miropost_id, user.id %>
      <%= f.submit 'お気に入り', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>